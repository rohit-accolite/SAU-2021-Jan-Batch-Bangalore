<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.au.hibernate.Library" table="BOOKS">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="bookName" column="bookName" type="string" />
        <property name="authorName" column="authorName" type="string" />
        <property name="publishYear" column="publishYear" type="int" />
    </class>
</hibernate-mapping>